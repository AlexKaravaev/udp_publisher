<launch>

<arg name="device_ip" default="127.0.0.1" />
<arg name="port_number" default="54000" />
<arg name="udp_topic" default="udp_data" />
<arg name="playback_topic" default="udp_data" />
<!-- mode can be "socket" or "playback" -->
<arg name="mode" default="socket"/>

<node pkg="raw_udp_receiver" name="udp_receiver_node" type="udp_receiver_node" output="screen">
  <param name="device_ip" value="$(arg device_ip)" />
  <param name="port_number" type="int" value="$(arg port_number)" />
  <param name="udp_topic" value="$(arg udp_topic)" />
  <param name="mode" value="$(arg mode)" />
</node>

</launch>
